@model AccountPlanViewModel
@{
    ViewData["Title"] = "Plano de Contas";
}


<!-- Adicione as referências ao Bootstrap CSS e JS no cabeçalho da página -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<h1>Cadastrar Plano de Conta</h1>

<!-- Formulário de Cadastro -->
<form asp-action="Register" method="post">
    <input type="hidden" id="ativo" name="Active" asp-for="Active" value="@Model.Active">
    <div class="form-group">
        <label for="descricao">Descrição:</label>
        <input type="text" class="form-control" id="descricao" name="Description" required asp-for="Description">
    </div>
    <div class="form-group">
        <label asp-for="Type">Tipo:</label>
        <select asp-for="Type" class="form-control" asp-items="@Model.AllTypes" required>
            <option value="">Selecione...</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a type="button" class="btn btn-secondary" href="~/AccountPlan/Index">Cancelar</a>
    </div>
</form>

<!-- Mensagem de Confirmação -->
@if (!string.IsNullOrEmpty(ViewBag.Mensagem))
{
    <div class="alert alert-success mt-3" role="alert">
        @ViewBag.Mensagem
    </div>
}